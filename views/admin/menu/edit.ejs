    <h3>Edit Menu</h3>
    <% if(alert.message != '') { %>
    <div class="alert alert-<%= alert.status %>">
        <%= alert.message %>
    </div>
    <% } %>
    <form action="/admin/menu/<%= data[0].id %>/edit" method="post">
        <div class="form-group">
            <label for="name"> Name:</label>
            <input type="text" value="<%= data[0].menu %>" class="form-control" name="name" id="name">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
